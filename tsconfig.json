{
	"compilerOptions": {
		"target": "ESNext",
		"jsx": "preserve",
		"lib": ["ESNext", "DOM"],
		"module": "ESNext",
		"moduleResolution": "Bundler",
		"resolveJsonModule": true,
		"strict": true,
		"noUnusedLocals": true,
		"esModuleInterop": true,
		"skipLibCheck": true
	},
	"exclude": ["**/node_modules/**", "**/dist/**"]
}
